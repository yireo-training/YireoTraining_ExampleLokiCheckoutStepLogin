<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="loki-checkout.steps">
            <block
                name="loki-checkout.steps.login"
                as="login"
                template="LokiCheckout_Core::generic/container.phtml">
                <block name="loki-checkout.steps.login.form"
                       template="YireoTraining_ExampleLokiCheckoutStepLogin::checkout/step/login.phtml">
                </block>
            </block>
        </referenceBlock>

        <referenceContainer name="loki.script.component">
            <block
                name="loki-checkout.script.component.login-component"
                template="YireoTraining_ExampleLokiCheckoutStepLogin::script/component/login-component.phtml"/>
        </referenceContainer>
    </body>
</page>
